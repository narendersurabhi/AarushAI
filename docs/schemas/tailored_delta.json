{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/tailored-delta.json",
  "type": "object",
  "required": ["changes"],
  "properties": {
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["section", "action", "detail"],
        "properties": {
          "section": {"type": "string"},
          "action": {"type": "string", "enum": ["add", "update", "remove"]},
          "detail": {"type": "string"},
          "rationale": {"type": "string"},
          "evidence": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
